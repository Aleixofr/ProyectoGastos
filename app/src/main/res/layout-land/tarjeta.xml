<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="?attr/colorSurface"
    android:padding="8dp">

    <LinearLayout
        android:layout_width="237dp"
        android:layout_height="215dp"
        android:background="@drawable/fondo_ocio"
        android:clipToPadding="false"
        android:elevation="4dp"
        android:orientation="vertical"
        android:padding="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Imagen -->

        <!-- Información principal -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imagenLista"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginEnd="8dp"
                android:contentDescription="@string/imagenLista"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/ocio" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <Button
                    android:id="@+id/btn_aumentar_land"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Añadir" />

                <Button
                    android:id="@+id/btn_quitar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Quitar" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/TituloLista"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="Título"
            android:textColor="?attr/colorOnSurface"
            android:textSize="18sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/CategoriaLista"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/asap_condensed_medium"
                android:text="Categoría"
                android:textColor="?attr/colorTertiary"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_precio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Precio"
                android:textAlignment="center"
                android:textColor="?attr/colorSecondary"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_cantidad"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Cantidad"
                android:textAlignment="textEnd"
                android:textColor="?attr/colorOnSurfaceVariant"
                android:textSize="12sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/DescripcionLista"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="Descripción breve sobre este elemento. Esto se corta si es demasiado largo."
            android:textColor="?attr/colorOnSurfaceVariant"
            android:textSize="12sp" />

        <!-- Controles de cantidad -->

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
